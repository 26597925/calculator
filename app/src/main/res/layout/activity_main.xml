<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    tools:context="org.xing.android.MainActivity"
    android:background="@color/colorBackground">

    <EditText
        android:background="@drawable/boder"
        android:inputType="textPersonName"
        android:ems="10"
        android:paddingLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textColor="@color/colorText"
        android:text="0"
        android:textSize="38sp"
        android:duplicateParentState="false"
        android:editable="false"
        android:focusable="false" />

    <Button
        android:id="@+id/stateButton"
        android:layout_height="32dp"
        android:layout_marginBottom="6dp"
        android:background="@mipmap/input_sleep"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/input"
        android:layout_width="22dp"
        android:layout_marginRight="6dp" />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/recordDynamic"
        android:max="2000"
        android:progress="0"
        android:visibility="visible"
        android:alpha="50"
        android:layout_height="3dp"
        android:layout_below="@+id/input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/input"
        android:layout_alignEnd="@+id/input"
        android:indeterminate="false"
        android:layout_width="match_parent"
        android:paddingLeft="3dp"
        android:progressDrawable="@drawable/record_progress"
        android:paddingRight="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/boder"
        android:layout_marginTop="5dp"
        android:padding="5dip"
        >
            <WebView
                android:id="@+id/historylist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="97"
                android:layout_gravity="center"
                android:layerType="software" />

        <TextView
            android:id = "@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:layout_below="@+id/historylist"
            android:textSize="12dp" />
    </LinearLayout>

</RelativeLayout>
