<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    tools:context="org.xing.android.MainActivity"
    android:background="@color/colorBackground">

    <EditText
        android:background="@drawable/boder"
        android:inputType="textPersonName"
        android:ems="10"
        android:paddingLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textColor="@color/colorText"
        android:text="0"
        android:textSize="38sp"
        android:duplicateParentState="false"
        android:editable="false"
        android:focusable="false" />

    <Button
        android:id="@+id/stateButton"
        android:layout_height="44dp"
        android:layout_width="44dp"
        android:background="@mipmap/input_sleep"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/input" />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/recordDynamic"
        android:max="2000"
        android:progress="0"
        android:visibility="visible"
        android:alpha="50"
        android:layout_height="3dp"
        android:layout_below="@+id/input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/input"
        android:layout_alignEnd="@+id/input"
        android:indeterminate="false"
        android:layout_width="match_parent"
        android:paddingLeft="3dp"
        android:progressDrawable="@drawable/record_progress"
        android:paddingRight="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/boder"
        android:layout_marginTop="5dp"
        android:padding="5dip"
        >
            <WebView
                android:id="@+id/historylist"
                android:layout_width="match_parent"
                android:background="@color/colorFront"
                android:layout_height="0dp"
                android:layout_weight="97"
                android:layout_gravity="center"
                android:layerType="software" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/boder" >

            <TextView
                android:id = "@+id/msg"
                android:layout_width="0dp"
                android:layout_weight="45"
                android:layout_height="wrap_content"
                android:textColor="#777777"
                android:textSize="12dp"
                android:gravity="left"
                android:layout_gravity="bottom" />

            <Button
                android:id = "@+id/ctrl_start"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:background="@mipmap/start"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="45"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:gravity="right"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/boder" >
                    <Button
                        android:id = "@+id/help_mark"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:textColor="#777777"
                        android:clickable="true"
                        android:background="@drawable/textview_help_selector"
                        android:gravity="center"
                        android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
